<p style="color: green"><%= notice %></p>

<% content_for :title, "Articles" %>

<h1>Articles</h1>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
    <p></p>
    <hr>
  <% end %>
</div>
<% if can? :manage, :all%>
  <%= button_to "Administração", admin_users_path, method: :get %>
<% end %>
<% if can? :create, Article %>
  <%= link_to "Criar novo artigo", new_user_article_path(current_user.id) %>
<% end %>
