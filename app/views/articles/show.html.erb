<p style="color: green"><%= notice %></p>

<%= render @article %>

<div style="line-height: 1.8;" >
  <% if can? :edit, @article %>
    <%# Se o autor do artigo for o mesmo que o usuário %>
    <%= link_to "Edit this article", edit_article_path(@article) %> |
    <%= button_to "Destroy this article", @article, method: :delete %>
  <%end%>
  <%if can? :read, Comment%>
    <%= link_to "Comentários", article_comments_path(@article) %>
  <%end%>
  <%= link_to "Back to articles", articles_path %> | <br>
</div>
