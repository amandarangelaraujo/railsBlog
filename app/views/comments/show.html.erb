<p style="color: green"><%= notice %></p>

<%= render @comment %>

<div>
  <% if logged_in? %>
    <%= link_to "Edit this comment", edit_article_comment_path(@comment.article, @comment) %> |
    <%= button_to "Destroy this comment", @comment, method: :delete %>
  <% end %>
  <%= link_to "Back to comments", article_comments_path(@comment.article) %>

</div>
