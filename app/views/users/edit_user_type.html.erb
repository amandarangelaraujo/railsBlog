<h1>Alterar Tipo de Usuário</h1>

<%= form_with(model: @user, url: update_user_type_user_path(@user), method: :patch) do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red;">
      <h2><%= pluralize(@user.errors.count, "erro") %> impediram a atualização:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_type, "Tipo de Usuário", style: "display: block;" %>
    <%= form.select :user_type, options_for_select({"Visitante" => 1, "Autor" => 2, "Admin" => 3}, @user.user_type), prompt: 'Selecione o tipo de usuário' %>
  </div>

  <div style="margin-top: 15px;">
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Voltar", users_path, class: "btn btn-secondary", style: "margin-top: 15px;" %>
