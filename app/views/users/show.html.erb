<p style="color: green"><%= notice %></p>

<%= render @user %>

<div>
  <h1>Esses são os articles desse usuário</h1>

  <ul>
    <% @articles.each do |article| %>
      <li>
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= truncate(article.body, length: 100) %></p>
        <p><small>Published on: <%= article.created_at.strftime("%d %b %Y") %></small></p>
      </li>
    <% end %>
  </ul>

  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users",  admin_users_path, method: :get %>
  <%= link_to "Create Article", new_user_article_path(@user) %>
  <%= button_to "Destroy this user", @user, method: :delete %>
</div>